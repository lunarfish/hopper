{% extends "layouts/default.njk" %}

{% block header %}
<div class="hopper grid-x grid-margin-x grid-padding-y">
  <div class="cell small-12">
    <h2>
      <i class="icon-pacman"></i>
      Roles
    </h2>
  </div>
</div>
{% endblock %}

{% block content %}
{% for role in roles %}
<a class="button expand left" href="/role/{{ role.uuid }}">
  {{ user.role_name }}
</a>
{% endfor %}
{% endblock %}

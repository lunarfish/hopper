{% extends "layouts/default.njk" %}

{% block header %}
<h2>
  <img class="user-icon" src="{{ user.picture }}"/>
  {{ user.full_name }}
</h2>
<a class="button" href="/user/{{user.uuid}}/delete">
  <i class="icon-bin2"></i>
</a>
<p>{{ user.provider_id }}</p>
{% endblock %}

{% block content %}
<div class="grid-x grid-margin-x grid-padding-y">
  <div class="cell small-12">
  </div>
  <div class="cell large-6 medium-8 small-12">
  </div>
  <div class="cell large-6 medium-4 small-12">
  </div>
</div>
{% endblock %}

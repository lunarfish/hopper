{% extends "layouts/default.njk" %}

{% block header %}
<div class="hopper grid-x grid-margin-x grid-padding-y">
  <div class="cell small-12">
    <h2>{{ hopper.name }}</h2>
    </div>
</div>
{% endblock %}

{% block content %}
<h3>Jobs:</h3>
{% for job in jobs %}
<a class="button expand left" href="/hopper/{{ hopper.slug }}/job/{{ job.uuid }}">
  {{ job.name }}
</a>
{% endfor %}
<h3>Add a job</h3>
<form method="post" action="/hopper/{{ hopper.slug }}/job/add">
  <label for="name">Job name</label>
  <input type="text" name="name">
  <input type="submit" value="Add" class="button">
</form>
{% endblock %}

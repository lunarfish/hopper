{% extends "layouts/default.njk" %}

{% block header %}
<h2>
  <i class="icon-profile"></i>
  {{ team.name }}
</h2>
{% endblock %}

{% block content %}
<h3>Members:</h3>
<div class="grid-x grid-margin-x grid-padding-y">
  <div class="cell small-12">
    {% for member in members %}
    <a class="button expand left" href="/">
    {{ member.user.full_name }}
    </a>
    {% endfor %}
  </div>
  <div class="cell large-6 medium-8 small-12">

  </div>
  <div class="cell large-6 medium-4 small-12">
  </div>
</div>
<h3>Add a member</h3>
<form method="post" action="/team/{{ team.slug }}/member/add">
  <label for="email">Email</label>
  <input type="text" name="email">
  <input type="submit" value="Add" class="button">
</form>
<h3>Parent</h3>
<form method="post" action="/team/{{ team.slug }}/parent">
  <label for="email">Team</label>
  <input type="text" name="team">
  <input type="submit" value="Set" class="button">
</form>
{% endblock %}

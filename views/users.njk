{% extends "layouts/default.njk" %}

{% block header %}
<div class="hopper grid-x grid-margin-x grid-padding-y">
  <div class="cell small-12">
    <h2>Users</h2>
    </div>
</div>
{% endblock %}

{% block content %}
{% for user in users %}
<a class="button expand left" href="/user/{{ user.username }}">
  {{ user.full_name }}
</a>
{% endfor %}
<h3>Add a user</h3>
<form method="post" action="/user/add">
  <label for="username">Username</label>
  <input type="text" name="username">
  <input type="submit" value="Add" class="button">
</form>
{% endblock %}
